{% extends 'base.html.twig' %}

{% block body %}
<h3><span class="fi fi-{{ job.country|lower }}"></span> {{ job.title }}</h3>
<div class="row pt-3">
    <div class="col-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">{{ job.title }}</h5>
            </div>
            <div class="card-body">
                <p class="card-text">{{ job.description }}</p>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">{{ job.title }}</h5>
            </div>
            <div class="card-body">
                <p class="">Job Title : {{ job.title }}</p>
                <p class="">Country : {{ job.country|upper }}</p>
                <p class="">Starting salary : {{ job.salary|number_format(0, ',', ',') }}</p>
                <p class="">Contact : {{ job.email }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
