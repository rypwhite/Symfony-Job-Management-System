{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <h3>Active Job Listings</h3>
    <table class="table table-responsive w-100">
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Country</td>
                <td>Description</td>
                <td>Salary</td>
                <td>Contact email</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.title }}</td>
                <td>{{ job.country }}</td>
                <td>{{ job.description|slice(0,100) }}...</td>
                <td>{{ job.salary|number_format(0, ',', ',') }}</td>
                <td>{{ job.email }}</td>
                <td>
                    <div class="d-flex w-100">
                        <a class="btn btn-warning mx-1" href="{{ path('job.edit', {id:job.id}) }}">edit</a>
                        <a class="btn btn-danger mx-1" href="{{ path('job.delete', {id:job.id}) }}">delete</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
